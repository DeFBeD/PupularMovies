<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/movie_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/titleViewThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rating"
        app:layout_constraintLeft_toRightOf="@id/movie_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/releaseViewThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/plotThumbnail"
        app:layout_constraintLeft_toRightOf="@id/release"
        tools:text="12-14-18"/>

    <TextView
        android:id="@+id/ratingViewThumbnail"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/rating"
        app:layout_constraintTop_toBottomOf="@id/titleViewThumbnail"
        tools:text="9.0"/>

    <TextView
        android:id="@+id/plotThumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:padding="16dp"
        app:layout_constraintLeft_toRightOf="@id/movie_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/titleViewThumbnail"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Rating:"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/movie_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/titleViewThumbnail"/>

    <TextView
        android:id="@+id/release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Release Date:"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/movie_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/rating"/>





</android.support.constraint.ConstraintLayout>